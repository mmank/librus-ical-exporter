{
    "manifest_version": 3,
    "name": "Librus iCal Exporter",
    "version": "1.0",
    "description": "Export Librus Synergy timetable to iCal format.",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://synergia.librus.pl/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://synergia.librus.pl/gateway/ms/studentdatapanel/ui/lekcje/plan-lekcji*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "Librus iCal Exporter"
    }
}